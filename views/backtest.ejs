<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head', {title: `Bird Sighting Form`, background:
    `https://c.tenor.com/5lHDGVVvRIQAAAAC/birds-attack-all-that.gif`}); -%>

    <!-- adapted from https://www.w3schools.com/jquery/tryit.asp?filename=tryjquery_html_attr_set and 
    https://stackoverflow.com/questions/28203140/how-to-make-todays-date-default-value-in-bootstrap-date-input/28203274-->
    <script>
      var today = Date();

      $(document).ready(function () {
        $("#creation_time").attr("value", today);
        $("#submit-button").click(function () {
          $("#creation_time").attr("value", today);
        });
      });
    </script>
  </head>
  <body>
    <%- include('partials/navbar-header', {header: `Bird Watching Form`,
    subheader: `Submit Your Bird Sighting`}); -%>

    <div class="container" id="form-container" style="max-width: 600px">
      <form action="/note" method="POST">
        <div class="form-group">
          <label for="appearance">Bird Appearance:</label>
          <textarea
            class="form-control"
            id="appearance"
            rows="3"
            name="appearance"
            placeholder="red-crested merlion-esque parakeet-looking bird"
            required
          ></textarea>
        </div>

        <div class="row">
          <div class="form-group col-sm-6 col-md-6">
            <label for="date">Date</label>
            <input
              type="text"
              class="form-control"
              id="date"
              name="date"
              placeholder="2021-12-01"
              required
            />
          </div>
          <div class="form-group col-sm-6 col-md-6">
            <label for="flock_size">Flock Size</label>
            <input
              type="text"
              class="form-control"
              id="flock_size"
              name="flock_size"
              placeholder="2"
              required
            />
          </div>
        </div>
        <div class="form-group">
          <div class="col">
            <div class="col justify-content-start">
              <label for="species_id">Species: </label>
              <select class="form-control" name="species_id" id="species_id">
                <% species.forEach((type) => { %>
                <option value="<%= type.id %>"><%= type.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>

        <!-- <div class="form-group">
          <label for="behaviour">Behaviour:</label>
          <input
            type="text"
            class="form-control"
            id="behaviour"
            name="behaviour"
            placeholder="mynah harassing people at Plaza Sing"
            required
          />
        </div> -->
        <p>Behaviour:</p>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="behaviour"
            value="Bathing"
            id="behaviour"
          />
          <label class="form-check-label" for="behaviour"> Bathing </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="behaviour"
            value="Feeding"
            id="behaviour"
          />
          <label class="form-check-label" for="behaviour"> Feeding </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="behaviour"
            value="Walking"
            id="behaviour"
          />
          <label class="form-check-label" for="behaviour"> Walking </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="behaviour"
            value="Resting"
            id="behaviour"
          />
          <label class="form-check-label" for="behaviour"> Resting </label>
        </div>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            name="behaviour"
            value="Harassing"
            id="behaviour"
          />
          <label class="form-check-label" for="behaviour"> Harassing </label>
        </div>
        <div class="col text-center">
          <input
            class="btn btn-primary btn-lg text-center"
            id="submit-button"
            type="submit"
            value="Submit"
          />
        </div>
        <div id="div2"></div>
      </form>
    </div>
    <%- include('partials/footer'); -%>
  </body>
</html>
